generator prisma {
  provider = "prisma-client-js"
}

generator drizzle {
  provider = "drizzle-prisma-generator"
  output   = "./drizzle"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Translation {
  id        Int      @id @default(autoincrement())
  language  String
  key       String
  value     String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  @@unique([language, key])
  @@map("translations")
}

model User {
  id           Int      @id @default(autoincrement())
  email        String   @unique
  password     String
  roles        String[]
  accessToken  String?
  refreshToken String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @default(now()) @updatedAt

  @@map("users")
}
