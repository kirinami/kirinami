{
  "extends": "@tsconfig/node-lts/tsconfig.json",
  "compilerOptions": {
    "outDir": ".nest",
    "removeComments": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "@/prisma/*": ["prisma/*"],
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts", "nest-env.d.ts"],
  "exclude": ["node_modules"]
}
